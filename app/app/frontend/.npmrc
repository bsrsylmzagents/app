# npm configuration for better reliability
# Legacy peer deps for React 19 compatibility
legacy-peer-deps=true

# Increase timeout for slow networks
fetch-timeout=60000
fetch-retries=5

# Prefer offline when possible (faster installs)
prefer-offline=true

# Don't fail on audit issues during install (can run npm audit separately)
audit=false

# Progress bar for better feedback
progress=true

# Save exact versions
save-exact=false


